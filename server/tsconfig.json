{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS", 
    "moduleResolution": "Node",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true, 
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src"],  
  "exclude": ["node_modules"]
}